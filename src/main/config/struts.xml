<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="account" />
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.action.extension" value="html,action" />
	<constant name="struts.locale" value="en_us" />

	<package name="account-default" extends="struts-default" abstract="true">
		<interceptors>
			<interceptor name="exceptionInceptor" class="com.song.account.web.interceptor.ExceptionInterceptor"></interceptor>
			<interceptor-stack name="accountStacks">
				<interceptor-ref name="exceptionInceptor"/>
				<interceptor-ref name="defaultStack"/>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="accountStacks"/>
		<default-action-ref name="notexist"></default-action-ref>
		<global-results>
			<result name="runtimeException">/exception.jsp</result>
			<result name="error">/WEB-INF/jsp_account/errorInfo.jsp</result>
		</global-results>
		<global-exception-mappings>
			<exception-mapping exception="java.lang.RuntimeException" result="runtimeException"/>
		</global-exception-mappings>
		<action name="notexist" class="indexAction" method="toNotexist">
			<result name="success">/notexist.jsp</result>
		</action>
	</package>
	
	<include file="struts-account.xml"></include>
</struts>
